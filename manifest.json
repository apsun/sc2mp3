{
  "manifest_version": 3,
  "name": "SoundCloud to MP3",
  "description": "Adds a download button to SoundCloud tracks",
  "browser_specific_settings": {
    "gecko": {
      "id": "sc2mp3@crossbowffs.com"
    }
  },
  "version": "1.6",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.soundcloud.com/*",
    "*://*.sndcdn.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.soundcloud.com/*"],
      "js": ["sc2mp3.js"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  }
}
